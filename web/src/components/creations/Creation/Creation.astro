---
import type { Creation } from "../../../graphql/generated/sdk";
import Images from "./Images/Images.astro";
import Content from "./Content/Content.astro";

type Props = {
    creation: Creation;
};
const { creation } = Astro.props;
const images = creation.images ?? [];
---

<div class="container">
    <div class="images">
        <Images images={images} />
    </div>
    <div class="content">
        <Content />
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100%;
    }
    .images {
        width: 60%;
        height: 100%;
    }
    .content {
        width: 40%;
        height: 100%;
        overflow-y: auto;
    }

    @media screen and (max-width: 980px) {
        .container {
            flex-direction: column;
        }

        .images {
            width: 100%;
            height: 80vh;
        }
        .content {
            width: 100%;
            height: auto
        }
    }
</style>
